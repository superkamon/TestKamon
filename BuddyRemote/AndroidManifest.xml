<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.KengKamon.buddyremote"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashScreen"
            android:label="Buddy Control" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LogIn_Activity"
            android:label="@string/app_name" >
        </activity>
        
        <!--  Login Activity -->
        <activity
            android:name=".Main"
            android:label="Login Account"
            android:parentActivityName=".LogIn_Activity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.KengKamon.buddyremote.Sign_InActivity" />
        </activity>
        
        <!--  Register Activity -->
        <activity
            android:name=".Register_Activity"
            android:label="Register New Account" >
        </activity>
        
        <!--  ForgetPass Activity -->
        <activity
            android:name=".ForgetPass_Activity"
            android:label="@string/app_name" >
        </activity>
    </application>
    
 	<!-- Allow to connect with internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    
</manifest>
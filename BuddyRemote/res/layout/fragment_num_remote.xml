<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6D5D4"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.KengKamon.ebuddy.MainActivity" >

    <Button
        android:id="@+id/button2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText1"
        android:layout_alignParentRight="true"
        android:text="OK" />

    <Button
        android:id="@+id/button1"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@+id/editText1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:background="@drawable/power_button"
        
         />

    <Button
        android:id="@+id/btn_mute"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignLeft="@+id/linearLayout1"
        android:background="@drawable/mute_button" />

    <Button
        android:id="@+id/button7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/btn_mute"
        android:layout_alignRight="@+id/linearLayout1"
        android:background="@drawable/favorite_button" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="225dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"
        android:layout_toLeftOf="@+id/button7"
        android:background="@drawable/button_bg"
        android:ems="10"
        android:hint="   Insert your ch"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_mute"
        android:layout_below="@+id/button1"
        android:layout_marginLeft="14dp"
        android:text="MUTE"
        android:textColor="#444344"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignRight="@+id/button7"
        android:text="FAVORITE"
        android:textColor="#444344"
        android:textSize="15dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/button2"
        android:layout_below="@+id/textView1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/volup_btn"
            android:layout_width="80dp"
            android:layout_height="92dp"
            android:layout_marginLeft="55dp"
            android:background="@drawable/volup_button"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textSize="40dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="18dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/voldown_btn"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginLeft="55dp"
            android:background="@drawable/voldown_button"
            android:text="-"
            android:textColor="#FFFFFF"
            android:textSize="60dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignTop="@+id/linearLayout1"
        android:layout_marginTop="49dp"
          android:layout_marginLeft="55dp"
        android:background="@drawable/bg" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="9dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="40dp"
            android:text="VOL"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:text="POWER"
        android:textColor="#444344"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button5"
        android:layout_width="80dp"
        android:layout_height="92dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_toLeftOf="@+id/button2"
        android:background="@drawable/ch_down_button"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="81dp"
        android:layout_height="92dp"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignTop="@+id/button1"
        android:layout_marginTop="83dp"
        android:background="@drawable/ch_up_button" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/linearLayout3"
        android:layout_alignLeft="@+id/textView5"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="62dp"
        android:background="@drawable/bg" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="12dp"
            android:paddingTop="40dp"
            android:text="CH"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:text="Buddy Control"
        android:textColor="#343434"
        android:textSize="30dp"
        android:textStyle="bold" />
 
        
    
</RelativeLayout>
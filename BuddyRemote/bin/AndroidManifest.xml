<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.KengKamon.buddyremote"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashScreen"
            android:label="Buddy Control" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Sign_InActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name=".Main"
            android:label="@string/title_activity_num_remote"
            android:parentActivityName=".Sign_InActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.KengKamon.buddyremote.Sign_InActivity" />
        </activity>
        <activity
            android:name=".Register_Activity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ForgetPass_Activity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>